<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPink</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
    </style>

    <style name="ButtonAddLeft" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="shapeAppearance">@style/ButtonAddLeftShape</item>
    </style>

    <style name="ButtonAddLeftShape">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppThemes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--    RadioButton-->
    <style name="RadioButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorOrange</item>
    </style>
    <style name="seachViewTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="EditTextTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPink</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="TextLabelStock" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textColorHint">@color/colorGreen</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="strokeColor">@color/colorGreen</item>
    </style>

<!--    Toolbar-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:textSize">20sp</item>
    </style>


<!--    NavigationDrawerStyle-->
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/text_margin_large</item><!-- text size in menu-->
    </style>

    <!-- FABs MDC Style-->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>

        <!--<item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">14dp</item>-->

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

        <!--<item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>-->

    </style>

<!--    material button-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@color/colorPink</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
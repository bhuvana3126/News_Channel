<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/button_bg_stroke_delete">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="240dp"
        android:id="@+id/delete_title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/title_size_small" android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
        tools:text="@string/alert_delete"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/delete_text"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@+id/delete_title" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
        tools:text="@string/alert_delete_msg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_cancel"
        android:textColor="@color/colorWhite"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/delete_done"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_text"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_done"
        android:textColor="@color/colorWhite"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="@string/done"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_text"
        android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
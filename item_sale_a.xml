<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightRed">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/colorWhite" />

    <ScrollView
        android:id="@+id/sv_new_sale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/text_margin_small"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/btn_sale_auto_gst_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ct_new_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_one_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangular_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_bar_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:padding="@dimen/text_margin_small"
                    app:drawableEndCompat="@drawable/ic_bar_code"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_product_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tl_product_code" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_product_code"
                    style="@style/TextLabelStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/productCode"
                    android:textColorHint="@color/colorWhite"
                    app:boxStrokeColor="@color/colorWhite"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorWhite"
                    app:hintTextColor="@color/colorWhite"
                    app:layout_constraintEnd_toStartOf="@+id/tv_bar_search"
                    app:layout_constraintStart_toEndOf="@+id/tv_bar_code"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_product_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@color/colorWhite" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_bar_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:padding="@dimen/text_margin_small"
                    app:drawableEndCompat="@drawable/ic_search_white"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_product_code"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tl_product_code" />

                <!--itemName-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:padding="@dimen/text_margin"
                    android:text="@string/itemName"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintTop_toBottomOf="@+id/tl_product_code" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ed_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:background="@drawable/line_bottom_accent"
                    android:gravity="center"
                    android:padding="@dimen/text_margin_small"
                    android:text="@string/itemName"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintEnd_toStartOf="@+id/tv_search_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_search_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:gravity="center"
                    android:padding="@dimen/text_margin_small"
                    app:drawableEndCompat="@drawable/ic_search_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ed_item_name" />

                <RadioGroup
                    android:id="@+id/rbgp_bill_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_large"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_item_name">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/item_sale_rate_wt_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin_small"
                        android:buttonTint="@color/colorWhite"
                        android:text="@string/rateBased"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/RadioButtonTheme" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/item_sale_fine_wt_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin_small"
                        android:buttonTint="@color/colorWhite"
                        android:text="@string/fineBased"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/RadioButtonTheme" />
                </RadioGroup>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_expand_id_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:gravity="center"
                    android:padding="@dimen/text_margin_small"
                    app:drawableEndCompat="@drawable/ic_round_arrow_down_white"
                    app:layout_constraintBottom_toBottomOf="@+id/rbgp_bill_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rbgp_bill_type" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_item_type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/itemType"
                    android:textColorHint="@color/colorWhite"
                    app:boxStrokeColor="@color/colorWhite"
                    app:endIconMode="dropdown_menu"
                    app:endIconTint="@color/colorWhite"
                    app:hintTextColor="@color/colorWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rbgp_bill_type">

                    <com.google.android.material.textview.MaterialAutoCompleteTextView
                        android:id="@+id/et_item_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:inputType="none"
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@color/colorWhite" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_item_desc"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:layout_marginBottom="@dimen/text_margin_small"
                    android:hint="@string/itemDescription"
                    android:textColorHint="@color/colorWhite"
                    app:boxStrokeColor="@color/colorWhite"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorWhite"
                    app:hintTextColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_search_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_item_type">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@color/colorWhite" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_child_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ct_one_child">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_qty"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:hint="@string/qty"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_gr_wt"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:hint="@string/grossWeight"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_qty">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gr_wt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>


                <!--Wastage wt-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/button_bg_stroke_only"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_unit"
                    app:layout_constraintTop_toTopOf="@+id/tv_wastage" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_wastage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_large"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingTop="@dimen/text_margin_small"
                    android:paddingBottom="@dimen/text_margin_small"
                    android:text="@string/wastage"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_gr_wt" />


                <RadioGroup
                    android:id="@+id/rdgp_wastage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_large"
                    android:layout_marginEnd="@dimen/text_margin_large"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/text_margin_small"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wastage">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_wastage_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin_large"
                        android:text="@string/percentage_text"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/title_size_small" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_wastage_weight_gm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_in_gram"
                        android:textColor="@color/colorPrimaryDark"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textSize="@dimen/title_size_small" />
                </RadioGroup>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_unit"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/unit"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tl_weight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rdgp_wastage">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textColor="@color/colorPrimaryDark"
                        android:textCursorDrawable="@color/colorAccent"
                        android:layout_marginBottom="@dimen/text_margin_small"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_weight"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/wt"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tl_unit"
                    app:layout_constraintTop_toBottomOf="@+id/rdgp_wastage">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textColor="@color/colorPrimaryDark"
                        android:textCursorDrawable="@color/colorAccent"
                        android:layout_marginBottom="@dimen/text_margin_small"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_total_wt"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:hint="@string/totalWeight"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_unit">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_total_wt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_rate"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/rate"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_total_wt">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:gravity="center_horizontal"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/amount"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_rate">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:gravity="center_horizontal"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>


                <!--Making charge-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:background="@drawable/button_bg_stroke_only"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_wastage_weight"
                    app:layout_constraintTop_toTopOf="@+id/tv_making" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_making"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_large"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingTop="@dimen/text_margin_small"
                    android:paddingBottom="@dimen/text_margin_small"
                    android:text="@string/making"
                    android:textSize="@dimen/title_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_amount" />



                <RadioGroup
                    android:id="@+id/rdgp_making_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_large"
                    android:layout_marginEnd="@dimen/text_margin_large"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/text_margin_small"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_making">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_making_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/percentage_text"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/title_size_small" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_making_amount_per_gm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin_large"
                        android:text="@string/amount_per_gm"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:textColor="@color/colorPrimaryDark"

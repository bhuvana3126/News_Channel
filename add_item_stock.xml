<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.retail.jewels.fauxiq.accounting.room.converters.BindingUtils" />

        <import type="com.retail.jewels.fauxiq.accounting.utills.BindingAdapterKt" />

        <variable
            name="stockViewModel"
            type="com.retail.jewels.fauxiq.accounting.viewmodel.StockViewModel" />

        <import type="com.retail.jewels.fauxiq.accounting.viewmodel.StockViewModel.FormErrors" />

        <variable
            name="onItemChooseListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onSearchItemClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onItemTypeClickListener"
            type="com.retail.jewels.fauxiq.accounting.utills.OnCheckedChangeListener" />

        <variable
            name="onBarCodeChooseListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onItemTypeExpandListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onGrossWtExpandListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onChargeExpandListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onMoreListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onCancelCLickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onDoneCLickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightRed">

        <ScrollView
            android:id="@+id/sv_new_stock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/text_margin_small"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/btn_new_stcok_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_new_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/text_margin_small"
                    android:background="@color/colorPrimary"
                    android:paddingBottom="@dimen/text_margin_small"
                    app:layout_constraintBottom_toTopOf="@+id/tl_touch"
                    app:layout_constraintTop_toTopOf="@+id/tv_item_name" />


                <!--itemName-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:padding="@dimen/text_margin"
                    android:text="@string/itemName"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ed_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:background="@drawable/line_bottom_accent"
                    android:gravity="center"
                    android:hint="@string/itemName"
                    android:onClick="@{onItemChooseListener}"
                    android:padding="@dimen/text_margin_small"
                    android:text="@={stockViewModel.itemName}"
                    android:textSize="@dimen/text_large"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    app:layout_constraintEnd_toStartOf="@+id/tv_search_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_search_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:gravity="center"
                    android:onClick="@{onSearchItemClickListener}"
                    android:padding="@dimen/text_margin_small"
                    app:drawableEndCompat="@drawable/ic_search_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ed_item_name" />

                <RadioGroup
                    android:id="@+id/rbgp_bill_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_large"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:checkedButton="@={BindingAdapterKt.billTypeToButtonId(stockViewModel.billType)}"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_item_name">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_item_fine_based"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin_small"
                        android:buttonTint="@color/colorWhite"
                        android:checked="true"
                        android:onCheckedChanged="@{(buttonView, isChecked) -> onItemTypeClickListener.onCheckedChange(buttonView.getId(), isChecked)}"
                        android:text="@string/fineBased"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/RadioButtonTheme" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rb_item_rate_based"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin_small"
                        android:buttonTint="@color/colorWhite"
                        android:onCheckedChanged="@{(buttonView, isChecked) -> onItemTypeClickListener.onCheckedChange(buttonView.getId(), isChecked)}"
                        android:text="@string/rateBased"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/colorWhite"
                        android:theme="@style/RadioButtonTheme" />
                </RadioGroup>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_expand_id_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:gravity="center"
                    android:onClick="@{onItemTypeExpandListener}"
                    android:padding="@dimen/text_margin_small"
                    app:layout_constraintBottom_toBottomOf="@+id/rbgp_bill_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rbgp_bill_type" />


                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_id_types"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:background="@drawable/ic_drop_down_id"
                    android:dropDownVerticalOffset="@dimen/text_margin_medium_large"
                    android:entries="@array/itemIdType"
                    android:padding="@dimen/text_margin_small"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rbgp_bill_type" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_product_code"
                    style="@style/TextLabelStock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/productCode"
                    android:textColorHint="@color/colorWhite"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorWhite"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorWhite"
                    app:hintTextColor="@color/colorWhite"
                    app:layout_constraintEnd_toStartOf="@+id/tv_bar_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_id_types">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_product_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:text="@={stockViewModel.productCode}"
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@color/colorWhite" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_bar_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:onClick="@{onBarCodeChooseListener}"
                    android:padding="@dimen/text_margin_small"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_bar_code"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_product_code"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tl_product_code" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_item_desc"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:layout_marginBottom="@dimen/text_margin_small"
                    android:hint="@string/itemDescription"
                    android:textColorHint="@color/colorWhite"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorWhite"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorWhite"
                    app:hintTextColor="@color/colorWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_product_code">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_item_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:text="@={stockViewModel.itemDesc}"
                        android:textColor="@color/colorWhite"
                        android:textCursorDrawable="@color/colorWhite" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_touch"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_large"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/touch"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_wt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_item_desc">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_touch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:onTextChanged="@{(text, start, before, count) -> stockViewModel.touchPercentChange(text)}"
                        android:text="@={stockViewModel.touch}"
                        android:textSize="@dimen/text_large"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_qty"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/qty"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_wt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_touch">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="4"
                        android:onTextChanged="@{(text, start, before, count) -> stockViewModel.quantityChange(text)}"
                        android:text="@={stockViewModel.qty}"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_unit_wt"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/unitWt"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_wt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_qty">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_unit_wt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:onTextChanged="@{(text, start, before, count) -> stockViewModel.unitWeightChange(text)}"
                        android:text="@={stockViewModel.unitWt}"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_gr_wt"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/grossWeight"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:errorText='@{stockViewModel.formErrors.contains(FormErrors.MISSING_GROSS) ? "Required" : ""}'
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_wt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_unit_wt">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gr_wt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:afterTextChanged="@{(text) -> stockViewModel.grossWeightChange(text)}"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:text="@={stockViewModel.grossWeight}"
                        android:textSize="@dimen/text_large"
                        android:textCursorDrawable="@color/colorPurple" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_expand_wt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:onClick="@{onGrossWtExpandListener}"
                    android:padding="@dimen/text_margin_small"
                    app:drawableEndCompat="@drawable/ic_arrow_down_accent"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_gr_wt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tl_gr_wt" />

                <FrameLayout
                    android:id="@+id/new_gross_wt_more_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    app:layout_constraintTop_toBottomOf="@+id/tl_gr_wt" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_rate"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/rate"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:errorText='@{stockViewModel.formErrors.contains(FormErrors.MISSING_RATE) ? "Required" : ""}'
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_charges"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/new_gross_wt_more_details">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:onTextChanged="@{(text, start, before, count) -> stockViewModel.rateChange(text)}"
                        android:text="@={stockViewModel.rate}"
                        android:textSize="@dimen/text_large"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_amount"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/amount"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_charges"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_rate">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:afterTextChanged="@{(text) -> stockViewModel.amountChange(text)}"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="10"
                        android:text="@={stockViewModel.amount}"
                        android:textSize="@dimen/text_large"
                        android:textCursorDrawable="@color/colorTextHeading" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_charges"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:focusableInTouchMode="false"
                    android:hint="@string/charges"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_charges"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_amount">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/text_margin"
                        android:focusableInTouchMode="false"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:text="@={stockViewModel.totalCharge}"
                        android:textSize="@dimen/text_large"
                        android:textCursorDrawable="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_expand_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:onClick="@{onChargeExpandListener}"
                    android:padding="@dimen/text_margin_small"
                    app:drawableEndCompat="@drawable/ic_arrow_down_accent"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_charges"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tl_charges" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_other_ch"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_small"
                    android:layout_marginTop="@dimen/text_margin_small"
                    android:layout_marginEnd="@dimen/text_margin_small"
                    android:hint="@string/otherCharge"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toStartOf="@+id/tv_expand_charges"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_charges">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_other_ch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:afterTextChanged="@{(text) -> stockViewModel.otherChChange(text)}"
                        android:drawablePadding="@dimen/text_margin"
                        android:gravity="center_horizontal"

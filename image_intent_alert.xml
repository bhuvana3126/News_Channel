<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_bg_solid"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/take_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_camera_accent"
        android:drawableLeft="@drawable/ic_camera_accent"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/camera"
        android:textColor="@color/colorAccent"
        android:drawablePadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pick_images"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pick_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_gallery"
        android:drawableLeft="@drawable/ic_gallery"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/gallery"
        android:drawablePadding="16dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/take_images"/>

    <TextView
        android:id="@+id/delete_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_delete_accent"
        android:drawableLeft="@drawable/ic_delete_accent"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/delete"
        android:drawablePadding="16dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/take_images"/>
</LinearLayout>